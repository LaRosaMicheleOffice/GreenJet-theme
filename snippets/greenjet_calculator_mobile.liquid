<p>{{ 'gj_calculator.allgemein.title' | t }}</p>

<div class="container-gj-calc" id="container-gj-calc-mob">
  <div class="user-input-gj-calc">
    <h6 style="color:yellow !important">{{ 'gj_calculator.allgemein.inputs' | t }}</h6>
    <!-- Inputs from user -->
    <br>
    <div class="gj-calc-mobile-wrapper">
      <div class="user-input-description">
        <label for="shower">{{ 'gj_calculator.allgemein.duschen' | t }}</label>
      </div>
      <div class="shower-container">
        <div class="shower-modifier" id="minus-modi-mob">-</div>
        <div><input type="text" name="shower" id="shower-mob" value="1" size="1" class="user-input"></div>
        <div class="shower-modifier" id="plus-modi-mob">+</div>
      </div>
    </div>
    <div class="gj-calc-mobile-wrapper">
      <div class="user-input-description">
        <label>{{ 'gj_calculator.allgemein.anschluss' | t }}</label>
      </div>
      <div class="checkbox-gj-calc gj-anschluesse">
        <!-- checkbox_wrapper_connection1-mob needed? -->
        <div class="checkbox-option-gj-calc" id="checkbox_wrapper_connection1-mob">
          <div>
            <label class="checkbox-label-gj-calc" for="connection1-mob"
              ><img src="https://cdn.shopify.com/s/files/1/0633/5778/0153/files/Brausekopf.svg" alt="Brausekopf"
            ></label>
          </div>
          <div>
            <label class="checkbox-label-gj-calc" id="checkbox_connection1-mob" for="connection1-mob">
              {{- 'gj_calculator.allgemein.brausekopf' | t -}}
            </label>
          </div>
        </div>
        <div class="checkbox-option-gj-calc" id="checkbox_wrapper_connection2-mob">
          <div>
            <label class="checkbox-label-gj-calc" for="connection2-mob"
              ><img src="https://cdn.shopify.com/s/files/1/0633/5778/0153/files/Regendusche_1.svg" alt="Regendusche"
            ></label>
          </div>
          <div>
            <label class="checkbox-label-gj-calc" id="checkbox_connection2-mob" for="connection2-mob">
              {{- 'gj_calculator.allgemein.regendusche' | t -}}
            </label>
          </div>
        </div>
        <input
          type="checkbox"
          name="connection1-mob"
          id="connection1-mob"
          class="user-input-checkbox-mob user-input-checkbox-all"
          checked
        >
        <input
          type="checkbox"
          name="connection2-mob"
          id="connection2-mob"
          class="user-input-checkbox-mob user-input-checkbox-all"
        >
      </div>
    </div>
    <div class="gj-calc-mobile-wrapper">
      <div class="user-input-description">
        <label for="person-mob">{{ 'gj_calculator.allgemein.personen' | t }}</label>
      </div>
      <div class="range-wrap">
        <input type="range" class="range user-input" id="person-mob" name="person-mob" min="1" max="8" value="2">
        <output class="bubble"></output>
      </div>
    </div>
    <br>
    <br>
    <div class="user-input-description gj-calc-mobile-wrapper">
      <div class="user-input-description">
        <label for="fuel">{{ 'gj_calculator.heizmittel.title' | t }}</label><br>
      </div>
      <div class="custom-select-gj-calc" id="custom-select-gj-calc-id-mob">
        <span id="select-option-gj-calc-mob"></span>
      </div>
    </div>
    <div id="select-selected-id-mob"></div>
    <br>
    <div id="calculation_headline-mob">
      <div class="user-input-description">
        <label class="rich_text_button">
          {{- 'gj_calculator.berechnungsgrundlagen.title' | t }}
          <svg
            class="icon-signpost-arrow team__popup-trigger js-btn-item"
            data-modal-action="add"
            data-modal-rel="16568321444d97df25-0"
            href="#"
            aria-hidden="true"
            focusable="false"
            role="presentation"
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="12"
            viewBox="0 0 18 12"
            fill="none"
          >
            <path data-modal-action="add" data-modal-rel="16568321444d97df25-0" href="#" fill-rule="evenodd" clip-rule="evenodd" d="M14.7272 5.6364L10.3636 1.27279L11.6364 0L17.2728 5.6364L11.6364 11.2728L10.3636 10L14.7272 5.6364Z" fill="currentColor"></path>      <path fill-rule="evenodd" clip-rule="evenodd" d="M0 4.73645L16 4.73645L16 6.53645L-1.57361e-07 6.53645L0 4.73645Z" fill="currentColor"></path>
          </svg>
        </label>
      </div>
      <div class="calculation-explanation" id="calculation_explanation-mob">
        <div>
          <span id="expl_fuel-mob"></span><br>
          <span id="expl_fuel_cost-mob"></span><br>
          <span id="expl_fuel_co2-mob"></span><br>
          <br>

          <span id="expl_water_temp_cold-mob"></span><br>
          <span id="expl_water_temp_warm-mob"></span><br>
          <span id="expl_water_cost_cold-mob"></span><br>
          <span id="expl_water_cost_waste-mob"></span><br>
          <div class="info-panel-gj-calc">
            <div class="description-gj-calc">
              {{ 'gj_calculator.berechnungsgrundlagen.auslastung' | t }}
            </div>
            <div class="value-gj-calc">
              <span id="utilization-mob"></span>
              <span> %</span>
            </div>
          </div>

          <div class="info-panel-gj-calc">
            <div class="description-gj-calc">
              {{ 'gj_calculator.berechnungsgrundlagen.duschdauer' | t }}
            </div>
            <div class="value-gj-calc">
              <span id="duration-mob"></span>
              <span> {{ 'gj_calculator.berechnungsgrundlagen.minuten' | t }}</span>
            </div>
          </div>

          <div class="info-panel-gj-calc">
            <div class="description-gj-calc">
              {{ 'gj_calculator.berechnungsgrundlagen.wasserdurchfluss' | t }}
            </div>
            <div class="value-gj-calc">
              <span id="flow-mob"></span>
              <span>
                {{ 'gj_calculator.berechnungsgrundlagen.liter' | t }}/
                {{- 'gj_calculator.berechnungsgrundlagen.minuten' | t -}}
              </span>
            </div>
          </div>

          <div class="info-panel-gj-calc">
            <div class="description-gj-calc">GREENJET:</div>
            <div class="value-gj-calc">
              <span id="greenjet_flow-mob"></span>
              <span>
                {{ 'gj_calculator.berechnungsgrundlagen.liter' | t }}/
                {{- 'gj_calculator.berechnungsgrundlagen.minuten' | t -}}
              </span>
            </div>
          </div>

          <div class="info-panel-gj-calc">
            <div class="description-gj-calc">GREENJET:</div>
            <div class="value-gj-calc">
              <span id="greenjet_saving-mob"></span>
              <span> % {{ 'gj_calculator.allgemein.einsparung' | t }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Input from system -->
  <div class="result-gj-calc">
    <h6>{{ 'gj_calculator.result.title' | t }}</h6>
    <br>

    <p>{{ 'gj_calculator.result.jahreseinsparung' | t }}</p>

    <div class="info-panel-gj-calc">
      <div class="description-gj-calc"></div>
      <div class="value-gj-calc">
        <span id="amount_saving-mob"></span>
        <span> â‚¬</span>
      </div>
    </div>

    <div class="info-panel-gj-calc">
      <div class="description-gj-calc"></div>
      <div class="value-gj-calc">
        <span id="water_saving-mob"></span>
        <span> {{ 'gj_calculator.result.wasser' | t }}</span>
      </div>
    </div>

    <div class="info-panel-gj-calc">
      <div class="description-gj-calc"></div>
      <div class="value-gj-calc">
        <span id="co2_saving-mob"></span>
        <span> {{ 'gj_calculator.result.co2' | t }}</span>
      </div>
    </div>

    <p>{{ 'gj_calculator.result.anschaffung' | t }}</p>

    <div class="info-panel-gj-calc">
      <div class="description-gj-calc"></div>
      <div class="value-gj-calc">
        <span id="price_unit-mob"></span>
        <span> {{ cart.currency.symbol }} / {{ 'gj_calculator.result.stueck' | t }}</span
        ><span id="unit-amount-mob"></span>
        <hr>
      </div>
    </div>

    <div class="info-panel-gj-calc">
      <div class="description-gj-calc"></div>
      <div class="value-gj-calc">
        <span id="price_total-mob"></span>
        <span> {{ cart.currency.symbol }} / {{ 'gj_calculator.result.gesamt' | t }}</span>
      </div>
    </div>
    <br>
    <div class="info-panel-gj-calc">
      <div class="description-gj-calc">
        {{ 'gj_calculator.result.amortisationszeit' | t }}
      </div>
      <div class="value-gj-calc">
        <span id="amotization_time-mob"></span>
      </div>
      <small>
        {{- 'gj_calculator.result.amortisation_satz' | t }}
        <span id="amotization_time_2-mob"></span
      ></small>
    </div>

    <p>{{ 'gj_calculator.result.ersparnis_10j' | t }}</p>

    <div class="info-panel-gj-calc">
      <div class="description-gj-calc"></div>
      <div class="value-gj-calc">
        <span id="amotization_amount-mob"></span>
        <span> {{ cart.currency.symbol }}</span>
        <hr>
        <hr>
      </div>
    </div>
    <br>
  </div>
</div>
