{%- if section.blocks.size > 0 -%}
<div class="container">
    <div class="yv-services-box">
      <h2 class="text-center" style="padding-bottom:10px;">{{ section.settings.heading }}</h2>
      <div class="row">
    {%- for block in section.blocks -%}
        <div class="col-4 col-md-2"{{ block.shopify_attributes }}>
          <div class="yv-service-item">
             {% if block.settings.svg_url != blank %}
                <img class="custom_svg_icon" src="{{ block.settings.svg_url }}">
            {% else %}
              <span>
                {%- render 'icons' icon: block.settings.icon -%}
              </span>
            {% endif %}
            
            {%- if block.settings.heading != blank -%}
            <h6 class="h6-small">{{ block.settings.heading }}</h6>
            {%- endif -%}

            {%- if block.settings.text != blank -%}
            <p>{{ block.settings.text }}</p>
            {%- endif -%}
          </div>
        </div>
    {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}

<style>
  #shopify-section-{{ section.id }}.shopify-section {
    padding-top:{{ section.settings.top_space_desktop }}px;
    padding-bottom:{{ section.settings.bottom_space_desktop }}px;
  }
  @media only screen and (max-width:575px) {
    #shopify-section-{{ section.id }}.shopify-section{
      padding-top:{{ section.settings.top_space_mobile }}px;
      padding-bottom:{{ section.settings.bottom_space_mobile }}px;
    }
  }
</style>
