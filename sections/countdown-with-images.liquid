   {% assign imagesCount = 0 %} 
    {%- capture leftImage -%}
    {%- if section.settings.left_image != blank -%}
    {%- assign imagesCount = imagesCount | plus: 1 -%} 
    <div class="yv-countdown-image-leftbox yv-countdown-image-main-box wow fadeInUp"  data-wow-duration="1s" data-wow-delay="0.2s">
      <div class="yv-countdown-large-imgbox">
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger-element countdown-img-outer">
          {%- render 'lazy-image' image: section.settings.left_image, width: '415x' -%}
        </div>
      </div>
    </div>
    {%- endif -%}
    {%- endcapture -%}
    {%- capture rightImage -%}
    {%- if section.settings.right_image != blank -%}
    {%- assign imagesCount = imagesCount | plus: 1 -%}
    <div class="yv-countdown-image-rightbox yv-countdown-image-main-box wow fadeInUp"  data-wow-duration="1s" data-wow-delay="0.9s">
      <div class="yv-countdown-large-imgbox right">
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger"></div>
        <div class="trigger-element countdown-img-outer">
          {%- render 'lazy-image' image: section.settings.right_image, width: '415x' -%}
        </div>
      </div>
    </div>
    {%- endif -%}
    {%- endcapture -%}
<div id="countdown-section-{{ section.id }}" class="container">
  <div class="yv-countdown-content-wrapper  {% if imagesCount == 1 %}with-one-image{%elsif imagesCount == 2 %}with-two-image{% else %}without-image{% endif %}">
	{{- leftImage -}}
    <div class="yv-countdown-middle-content wow fadeInUp" data-wow-duration="1s" 
     data-aos-duration="500" data-wow-delay="0.6s">
      <div class="yv-countdown-center-content text-center">
        {%- if section.settings.heading != blank -%}
        <h2 class="yv-countdown-subtitle">{{ section.settings.heading }}</h2>
        {%- endif -%}        
        <input type="hidden" class="dealDate" value="{{ section.settings.date }}">
        <div id="dealCountdown" class="deal-countdown ">
          <ul class="list-unstyled deal-counter-box center-countdown">
            <li class="deal-counter"><span id="dDays">00</span></li><li class="deal-counter">:</li>
            <li class="deal-counter"><span id="dHours">00</span></li><li class="deal-counter">:</li>
            <li class="deal-counter"><span id="dMinutes">00</span></li><li class="deal-counter">:</li>
            <li class="deal-counter"><span id="dSeconds">00</span></li>
          </ul>
        </div>        
        {%- if section.settings.subheading != blank -%}
        <h5 class="yv-countdown-title">{{ section.settings.subheading }}</h5>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
        <div class="yv-countdown-center-desc">
          {{ section.settings.description }}
        </div>
        {%- endif -%}
        {%- if section.settings.btn_link != blank and section.settings.btn_text != blank -%}
        <a class="button black-btn mt-3" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
        {%- endif -%}
      </div>
    </div>
    {{ rightImage }}
  </div>
</div>
<style>
  #shopify-section-{{ section.id }}.shopify-section {
    padding-top:{{ section.settings.top_space_desktop }}px;
    padding-bottom:{{ section.settings.bottom_space_desktop }}px;
  }
  @media only screen and (max-width:575px) {
    #shopify-section-{{ section.id }}.shopify-section{
      padding-top:{{ section.settings.top_space_mobile }}px;
      padding-bottom:{{ section.settings.bottom_space_mobile }}px;
    }
  }
</style>
<script>
  $(document).ready(function(){
  dealSection('countdown-section-{{ section.id }}')
              })
</script>
{% schema %}
{
  "name": "t:sections.countdown-with-images.name",
  "tag": "section",
  "class": "countdown-with-images-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Countdown Heading Here",
      "label": "t:sections.countdown-with-images.settings.heading.label"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Countdown Sub Heading Here",
      "label": "t:sections.countdown-with-images.settings.subheading.label"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Countdown Description Here",
      "label": "t:sections.countdown-with-images.settings.description.label"
    },
    {
      "type": "text",
      "id": "date",
      "info": "t:sections.countdown-with-images.settings.date.info",
      "label": "t:sections.countdown-with-images.settings.date.label"
    },
    {
        "type":"header",
        "content": "t:common.header.button_section.label"
      },
    {
      "type": "text",
      "id": "btn_text",
      "default": "Buy Now",
      "label": "t:sections.countdown-with-images.settings.btn_text.label"
    },
    {
      "type": "url",
      "id": "btn_link",
      "default": "/collections/all",
      "label": "t:sections.countdown-with-images.settings.btn_link.label"
    },
    {
        "type":"header",
        "content": "t:common.header.media_section.label"
      },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "t:sections.countdown-with-images.settings.left_image.label",
      "info": "t:sections.countdown-with-images.settings.left_image.info"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "t:sections.countdown-with-images.settings.right_image.label",
      "info": "t:sections.countdown-with-images.settings.right_image.info"
    },
    {
        "type":"header",
        "content": "t:common.header.space_section.label"
      },
    {
      "type": "range",
      "id": "top_space_desktop",
      "label": "t:common.top_space_desktop.label",
      "default": 65,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_desktop",
      "label": "t:common.bottom_space_desktop.label",
      "default": 100,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "top_space_mobile",
      "label": "t:common.top_space_mobile.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_mobile",
      "label": "t:common.bottom_space_mobile.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5
    }
  ],
  "presets": [
    {
      "name": "t:sections.countdown-with-images.presets.name"
    }
  ]
}
{% endschema %}