<div class="container">
    <div class="yv-testimonial-wrapper " >
      <div class="row align-items-center justify-content-center">
        {%- if section.blocks.size > 0 -%}
        <div class="col-sm-12 {% if section.settings.style == 'style1' or section.settings.style == 'style2' and section.blocks.size == 1 %}col-md-10 col-lg-8 col-xl-6{% else %}col-md-12 col-lg-12 col-xl-12{% endif %}">
          <div id="testimonials-{{ section.id }}" class="yv-testimonial-slider {% if section.settings.style == 'style2' and section.blocks.size > 1 %}yv-boxtestimonial-slider{% endif %} {% if section.blocks.size < 3 %}testimonials-slider-{% endif %}" 
              data-flickity-slider='{
                                     {%- if section.settings.nav_style == 'arrow' -%}
                                     "prevNextButtons":true,
                                     "arrowShape":"M36.7,76.9c1.9,1.4,1.9,3.8,0,5.7c-0.6,0.6-1.6,0.9-2.8,0.9c-0.9,0-1.9-0.3-2.8-0.9L2.2,52.8 c-1.9-1.4-1.9-4.3,0-5.7L30,18.3c1.4-1.4,3.8-1.4,5.2,0c1.9,1.4,1.9,4.3,0,5.7L10.2,50L36.7,76.9z M95.2,46.2c1.9,0,3.8,1.9,3.8,4.3 c0,2.4-1.9,3.8-3.8,3.8H13c-2.4,0-3.8-1.4-3.8-3.8c0-2.4,1.4-4.3,3.8-4.3H95.2z",                                     
                                     "pageDots":false, 
                                     {%- else -%}
                                     "pageDots":true, 
                                     "prevNextButtons":false,
                                     {%- endif -%}
                                     "cellAlign": "left",
                                     "touchVerticalScroll": false,
                                     "wrapAround":true,
                                     "dragThreshold":true,
                                     "groupCells": true,
                                     "contain": true
                                     }' tabindex="0" data-desktop-only>
              {%- for block in section.blocks -%}
              <div class="slideshow__slide--{{ block.id }} yv-testimonial-slider-item" {{ block.shopify_attributes }}>
                <div class="yv-testimonial-slide">
                  {% if section.settings.style == 'style2' %}
                  <div class="yv-testimonial-author">
                    <div class="author-img">
                      {% if block.settings.image != blank %}
                      {%- render 'lazy-image' image: block.settings.image, sizes: '[100]' -%}
                      {%- else-%}
                      {%- render 'icons'  icon: 'author' -%}
                      {% endif %}                      
                    </div>
                  </div>
                  {% endif %}
                  <h5 class="yv-testimonial-feature-text">
                    <span class="">
                      <span class="">{{ block.settings.heading }}</span>
                    </span>
                  </h5>
                  <p class="yv-testimonial-review wow fadeIn">{{ block.settings.message }}</p>
                  <ul class="list-unstyled yv-testimonial-reviews">
                    {%- for i in (1..5) -%}
                    <li>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 380 362" width="20" height="19">
                        <path data-id="Layer_10" fill-rule="evenodd"   d="m204.7 10.5l37.5 116.1l122-0.3c15.4 0 21.2 19.1 7.7 28.9l-97.5 70.5l37.9 115.9c4.9 14.8-12.9 26.5-24.6 16.5l-97.6-71.2l-98.6 71.9c-13.4 9.7-28.2-3.4-22.6-20.4l36.9-112.7l-98.8-71.5c-12.6-9.1-5.2-28.9 10.1-27.9l120.9 0.3l37.5-116.1c4.5-14.2 24.7-14.1 29.2 0z" />
                      </svg>
                    </li>
                    {%- endfor -%}
                  </ul>
                  <div class="yv-testimonial-author">
                    {% if section.settings.style == 'style1' %}
                    <div class="author-img">
                      {% if block.settings.image != blank %}
                      {% render 'lazy-image' image: block.settings.image, sizes: '[100]' %}
                      {%- else-%}
                      {%- render 'icons'  icon: 'author' -%}
                      {% endif %}      
                    </div>
                    {% endif %}
                    <p>{{ block.settings.author }}{% if block.settings.author_city != blank %} / <span>{{block.settings.author_city}}</span>{% endif %}</p>
                  </div>
                </div>
              </div>
              {% endfor %}
            </div>

        </div>
        {%- endif -%}
      </div>
    </div>
  
  {% if section.settings.style == 'style2' and section.blocks.size > 1 %}
  
  {%- endif -%}
  </div>
<style>
  #shopify-section-{{ section.id }}.shopify-section {
    background-color:var(--secondaryColorBody);
    padding-top:{{ section.settings.top_space_desktop }}px;
    padding-bottom:{{ section.settings.bottom_space_desktop }}px;
  }
  @media only screen and (max-width:991px) {
    #shopify-section-{{ section.id }}.shopify-section{
      padding-top:{{ section.settings.top_space_mobile }}px;
      padding-bottom:{{ section.settings.bottom_space_mobile }}px;
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.testimonials.name",
  "tag": "section",
  "class": "testimonial testimonial-section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "t:sections.testimonials.settings.style.label",
      "default": "style1",
      "options": [
        {
          "label": "t:sections.testimonials.settings.style.options.style1.label",
          "value": "style1"
        },
        {
          "label": "t:sections.testimonials.settings.style.options.style2.label",
          "value": "style2"
        }
      ]
    },
    {
      "type": "select",
      "id": "nav_style",
      "label": "t:sections.testimonials.settings.nav_style.label",
      "default": "arrow",
      "options": [
        {
          "label": "t:sections.testimonials.settings.nav_style.options.arrow.label",
          "value": "arrow"
        },
        {
          "label": "t:sections.testimonials.settings.nav_style.options.dots.label",
          "value": "dots"
        }
      ]
    },  
    {
        "type": "header",
        "content": "t:common.header.space_section.label"
    },  
    {
      "type": "range",
      "id": "top_space_desktop",
      "label": "t:common.top_space_desktop.label",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_desktop",
      "label": "t:common.bottom_space_desktop.label",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "top_space_mobile",
      "label": "t:common.top_space_mobile.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_mobile",
      "label": "t:common.bottom_space_mobile.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "t:sections.testimonials.blocks.quote.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Awesome Product!",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "message",
          "default": "Add client reviews & testimonials to showcase your storeâ€™s happy clients.",
          "label": "t:sections.testimonials.blocks.quote.settings.message.label"
        },
        {
          "type": "text",
          "id": "author",
          "default": "Author name here",
          "label": "t:sections.testimonials.blocks.quote.settings.author.label"
        },
        {
          "type": "text",
          "id": "author_city",
          "default": "Author City here",
          "label": "t:sections.testimonials.blocks.quote.settings.author_city.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.testimonials.blocks.quote.settings.image.label",
          "info": "t:sections.testimonials.blocks.quote.settings.image.info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.testimonials.presets.name",
      "blocks": [
        {
          "type": "quote"
        },
        {
          "type": "quote"
        },
        {
          "type": "quote"
        },
        {
          "type": "quote"
        }
      ]
    }
  ]
}
{% endschema %}