      "default":false
    },
    {
      "type": "range",
      "id": "interval",
      "label": "t:sections.slider.settings.interval.label",
      "min":3,
      "max":10,
      "step":1,
      "unit":"s",
      "default":5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
