<div class="yv-banner-container slider-{{ section.settings.style }}" >
  {% if section.settings.style == 'style1' %}
  {% render 'slider-style-1' section: section %}
  {% else %}
  {% render 'slider-style-2' section: section %}  
  {% endif %}
</div>
<style>
  #shopify-section-{{ section.id }}{
    background-color: var(--secondaryColorBody);
  }
  {% for block in section.blocks %}
  #yv-banner-item-{{ block.id }} .yv-banner-subtitle{
    background-color:{{ block.settings.subtitle_bgcolor }};
    color:{{ block.settings.subtitle_color }};
  }  
  #yv-banner-item-{{ block.id }} .yv-banner-title{
    color:{{ block.settings.title_color }};
  }
  #yv-banner-item-{{ block.id }} .button{
    color:{{ block.settings.btn_text }};
    background-color:{{ block.settings.btn_bg }};
  	border-color:{{ block.settings.btn_bg }};
  }
  #yv-banner-item-{{ block.id }} .button:before{
  	border-color:{{ block.settings.btn_bg }};
  }
  {% endfor %}
  @media screen and (max-width:767px){
  {% for block in section.blocks %}
  #yv-banner-item-{{ block.id }} .yv-banner-subtitle{
    background-color:{{ block.settings.subtitle_bgcolor_m }};
    color:{{ block.settings.subtitle_color_m }};
  }  
  #yv-banner-item-{{ block.id }} .yv-banner-title{
    color:{{ block.settings.title_color_m }};
  }
  #yv-banner-item-{{ block.id }} .button{
    color:{{ block.settings.btn_text_m }};
    background-color:{{ block.settings.btn_bg_m }};
  	border-color:{{ block.settings.btn_bg_m }};
  }
  #yv-banner-item-{{ block.id }} .button:before{
  	border-color:{{ block.settings.btn_bg_m }};
  }
  {% endfor %}
  }
</style>
{% schema %}
{
  "name": "t:sections.slider.name",
  "tag": "section",
  "class": "banner-section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "t:sections.slider.settings.style.label",
      "default": "style1",
      "options": [
        {
          "label": "t:sections.slider.settings.style.options.style1.label",
          "value": "style1"
        },
        {
          "label": "t:sections.slider.settings.style.options.style2.label",
          "value": "style2"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "rotate",
